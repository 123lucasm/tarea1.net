# Configuración de la base de datos
MONGO_URI=mongodb://localhost:27017/sistema_elegibilidad

# Configuración JWT
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
JWT_REFRESH_SECRET=tu_refresh_secret_super_seguro_aqui
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de seguridad
BCRYPT_ROUNDS=12

# Rate Limiting (Límite de peticiones)
# RATE_LIMIT_WINDOW_MS: Ventana de tiempo en milisegundos (15 minutos = 900000ms)
# RATE_LIMIT_MAX_REQUESTS: Máximo de peticiones por ventana de tiempo
# - 1000 peticiones por 15 minutos para páginas normales
# - 300 peticiones por 15 minutos para APIs
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Configuración de logs
LOG_LEVEL=info

# Configuración Google OAuth
GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Configuración de sesiones
SESSION_SECRET=tu_session_secret_super_seguro_aqui

# Configuración de Email
EMAIL_USER=tu_email_gmail@gmail.com
EMAIL_PASS=tu_app_password_de_gmail
EMAIL_FROM=MATRICULATEC <noreply@matriculatec.com>

