<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Perfil - MATRICULATEC</title>
    
    <!-- Tailwind CSS Local -->
    <link rel="stylesheet" href="/css/tailwind.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AOS Animations -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
</head>

<body class="bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 min-h-screen font-inter">
    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 bg-white/90 backdrop-blur-md border-b border-gray-200/50 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <!-- Logo -->
                <a href="/admin" class="flex items-center space-x-3 hover:opacity-80 transition-opacity duration-200">
                    <div class="w-12 h-12 bg-gradient-to-br from-red-600 to-pink-600 rounded-2xl flex items-center justify-center shadow-lg">
                        <i class="fas fa-shield-alt text-white text-xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold bg-gradient-to-r from-red-600 to-pink-600 bg-clip-text text-transparent">
                            Panel Admin
                        </h1>
                        <p class="text-sm text-gray-600 font-medium">MATRICULATEC</p>
                    </div>
                </a>

                <!-- User Info & Actions -->
                <div class="flex items-center space-x-6">
                    <!-- User Profile -->
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-full flex items-center justify-center">
                            <i class="fas fa-user text-white text-sm"></i>
                        </div>
                        <div class="text-right">
                            <p class="text-sm font-semibold text-gray-900"><%= usuario.nombre %> <%= usuario.apellido %></p>
                            <p class="text-xs text-gray-500">Administrador</p>
                        </div>
                    </div>

                    <!-- Navigation Links -->
                    <div class="flex items-center space-x-2">
                        <a href="/admin" class="p-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-xl transition-all duration-200" title="Dashboard">
                            <i class="fas fa-tachometer-alt text-lg"></i>
                        </a>
                        <a href="/admin/perfil" class="p-2 text-blue-600 bg-blue-50 rounded-xl transition-all duration-200" title="Mi Perfil">
                            <i class="fas fa-user-cog text-lg"></i>
                        </a>
                        <a href="/auth/logout" class="p-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-xl transition-all duration-200" title="Cerrar Sesión">
                            <i class="fas fa-sign-out-alt text-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="pt-24 px-4 sm:px-6 lg:px-8 pb-8">
        <div class="max-w-7xl mx-auto">
            <!-- Header Section -->
            <div class="mb-12" data-aos="fade-down">
                <div class="relative overflow-hidden bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 rounded-3xl p-8 text-white shadow-2xl">
                    <div class="absolute inset-0 bg-black/10"></div>
                    <div class="relative">
                        <div class="flex items-center justify-between">
                            <div>
                                <h1 class="text-4xl lg:text-5xl font-bold mb-4 flex items-center">
                                    <i class="fas fa-user-cog mr-4 text-4xl"></i>
                                    Mi Perfil
                                </h1>
                                <p class="text-xl text-blue-100 mb-6">
                                    Gestiona tu información personal y configuración de cuenta
                                </p>
                            </div>
                            <div class="hidden lg:block">
                                <div class="w-32 h-32 bg-white/20 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user-cog text-6xl text-white/80"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Información del Usuario -->
                <div class="lg:col-span-1" data-aos="fade-right">
                    <div class="bg-white rounded-3xl p-8 shadow-lg border border-gray-200">
                        <div class="text-center">
                            <!-- Avatar -->
                            <div class="relative inline-block mb-6">
                                <div class="w-32 h-32 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white text-4xl font-bold shadow-lg">
                                    <%= usuario.nombre.charAt(0).toUpperCase() %><%= usuario.apellido.charAt(0).toUpperCase() %>
                                </div>
                                <button id="cambiar-avatar" class="absolute bottom-0 right-0 w-10 h-10 bg-emerald-500 text-white rounded-full flex items-center justify-center hover:bg-emerald-600 transition-colors shadow-lg">
                                    <i class="fas fa-camera text-sm"></i>
                                </button>
                            </div>
                            
                            <!-- Información básica -->
                            <h2 class="text-2xl font-bold text-gray-900 mb-2">
                                <%= usuario.nombre %> <%= usuario.apellido %>
                            </h2>
                            <p class="text-gray-600 mb-4"><%= usuario.email %></p>
                            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-indigo-100 text-indigo-800">
                                <i class="fas fa-shield-alt mr-2"></i>
                                Administrador
                            </span>
                            
                            <!-- Estadísticas del perfil -->
                            <div class="mt-6 space-y-4">
                                <div class="flex justify-between items-center py-3 border-b border-gray-200">
                                    <span class="text-gray-600 font-medium">Miembro desde</span>
                                    <span class="font-semibold text-gray-900">
                                        <%= new Date(usuario.createdAt).toLocaleDateString('es-ES', { 
                                            year: 'numeric', 
                                            month: 'long' 
                                        }) %>
                                    </span>
                                </div>
                                <div class="flex justify-between items-center py-3 border-b border-gray-200">
                                    <span class="text-gray-600 font-medium">Último acceso</span>
                                    <span class="font-semibold text-gray-900">
                                        <%= usuario.ultimoAcceso ? new Date(usuario.ultimoAcceso).toLocaleDateString('es-ES') : 'Nunca' %>
                                    </span>
                                </div>
                                <div class="flex justify-between items-center py-3">
                                    <span class="text-gray-600 font-medium">Estado</span>
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= usuario.activo ? 'bg-emerald-100 text-emerald-800' : 'bg-red-100 text-red-800' %>">
                                        <i class="fas fa-<%= usuario.activo ? 'check-circle' : 'times-circle' %> mr-1"></i>
                                        <%= usuario.activo ? 'Activo' : 'Inactivo' %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formulario de Edición -->
                <div class="lg:col-span-2" data-aos="fade-left">
                    <div class="bg-white rounded-3xl p-8 shadow-lg border border-gray-200">
                        <div class="flex items-center justify-between mb-8">
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center">
                                    <i class="fas fa-edit text-white text-lg"></i>
                                </div>
                                <div>
                                    <h3 class="text-2xl font-bold text-gray-900">Información Personal</h3>
                                    <p class="text-sm text-gray-600">Actualiza tus datos personales</p>
                                </div>
                            </div>
                            <button id="editar-perfil" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold rounded-2xl shadow-lg hover:shadow-xl hover:from-blue-600 hover:to-indigo-700 transition-all duration-300 transform hover:-translate-y-1 flex items-center space-x-2">
                                <i class="fas fa-edit"></i>
                                <span>Editar Perfil</span>
                            </button>
                        </div>

                        <form id="form-perfil" class="space-y-6">
                            <!-- Información Básica -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        <i class="fas fa-user mr-2 text-blue-500"></i>Nombre *
                                    </label>
                                    <input type="text" id="nombre" name="nombre" class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:border-blue-500 focus:ring-4 focus:ring-blue-200/50 transition-all duration-300 bg-gray-50 focus:bg-white" value="<%= usuario.nombre %>" readonly>
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        <i class="fas fa-user mr-2 text-blue-500"></i>Apellido *
                                    </label>
                                    <input type="text" id="apellido" name="apellido" class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:border-blue-500 focus:ring-4 focus:ring-blue-200/50 transition-all duration-300 bg-gray-50 focus:bg-white" value="<%= usuario.apellido %>" readonly>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        <i class="fas fa-envelope mr-2 text-blue-500"></i>Email *
                                    </label>
                                    <input type="email" id="email" name="email" class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:border-blue-500 focus:ring-4 focus:ring-blue-200/50 transition-all duration-300 bg-gray-50 focus:bg-white" value="<%= usuario.email %>" readonly>
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        <i class="fas fa-phone mr-2 text-blue-500"></i>Teléfono
                                    </label>
                                    <input type="tel" id="telefono" name="telefono" class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:border-blue-500 focus:ring-4 focus:ring-blue-200/50 transition-all duration-300 bg-gray-50 focus:bg-white" value="<%= usuario.telefono || '' %>" readonly>
                                </div>
                            </div>

                            <!-- Información Adicional -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-align-left mr-2 text-blue-500"></i>Biografía
                                </label>
                                <textarea id="biografia" name="biografia" class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:border-blue-500 focus:ring-4 focus:ring-blue-200/50 transition-all duration-300 bg-gray-50 focus:bg-white" rows="4" readonly><%= usuario.biografia || '' %></textarea>
                            </div>

                            <!-- Configuración de Cuenta -->
                            <div class="border-t border-gray-200 pt-8">
                                <div class="flex items-center space-x-4 mb-6">
                                    <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center">
                                        <i class="fas fa-cog text-white text-lg"></i>
                                    </div>
                                    <h4 class="text-xl font-bold text-gray-900">Configuración de Cuenta</h4>
                                </div>
                                
                                <div class="space-y-6">
                                    <div class="flex items-center justify-between p-6 bg-gray-50 rounded-2xl border border-gray-200">
                                        <div>
                                            <h5 class="font-semibold text-gray-900">Notificaciones por Email</h5>
                                            <p class="text-sm text-gray-600">Recibir notificaciones importantes por correo electrónico</p>
                                        </div>
                                        <label class="relative inline-flex items-center cursor-pointer">
                                            <input type="checkbox" id="notificaciones-email" class="sr-only peer" <%= usuario.notificacionesEmail ? 'checked' : '' %>>
                                            <div class="w-12 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                                        </label>
                                    </div>

                                    <div class="flex items-center justify-between p-6 bg-gray-50 rounded-2xl border border-gray-200">
                                        <div>
                                            <h5 class="font-semibold text-gray-900">Modo Oscuro</h5>
                                            <p class="text-sm text-gray-600">Cambiar el tema de la interfaz a modo oscuro</p>
                                        </div>
                                        <label class="relative inline-flex items-center cursor-pointer">
                                            <input type="checkbox" id="modo-oscuro" class="sr-only peer" <%= usuario.modoOscuro ? 'checked' : '' %>>
                                            <div class="w-12 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Botones de Acción -->
                            <div class="flex items-center justify-end space-x-4 pt-8 border-t border-gray-200">
                                <button type="button" id="cancelar-edicion" class="px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-2xl transition-colors duration-200 flex items-center space-x-2" style="display: none;">
                                    <i class="fas fa-times"></i>
                                    <span>Cancelar</span>
                                </button>
                                <button type="submit" id="guardar-perfil" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold rounded-2xl shadow-lg hover:shadow-xl hover:from-blue-600 hover:to-indigo-700 transition-all duration-300 transform hover:-translate-y-1 flex items-center space-x-2" style="display: none;">
                                    <i class="fas fa-save"></i>
                                    <span>Guardar Cambios</span>
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Cambio de Contraseña -->
                    <div class="bg-white rounded-3xl p-8 shadow-lg border border-gray-200 mt-8">
                        <div class="flex items-center justify-between mb-8">
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-gradient-to-br from-amber-500 to-orange-600 rounded-2xl flex items-center justify-center">
                                    <i class="fas fa-lock text-white text-lg"></i>
                                </div>
                                <div>
                                    <h3 class="text-2xl font-bold text-gray-900">Seguridad</h3>
                                    <p class="text-sm text-gray-600">Cambia tu contraseña para mantener tu cuenta segura</p>
                                </div>
                            </div>
                            <button id="cambiar-contraseña" class="px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-600 text-white font-semibold rounded-2xl shadow-lg hover:shadow-xl hover:from-amber-600 hover:to-orange-700 transition-all duration-300 transform hover:-translate-y-1 flex items-center space-x-2">
                                <i class="fas fa-key"></i>
                                <span>Cambiar Contraseña</span>
                            </button>
                        </div>

                        <form id="form-contraseña" class="space-y-6" style="display: none;">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-lock mr-2 text-amber-500"></i>Contraseña Actual *
                                </label>
                                <div class="relative">
                                    <input type="password" id="contraseña-actual" name="contraseñaActual" class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:border-amber-500 focus:ring-4 focus:ring-amber-200/50 transition-all duration-300 bg-gray-50 focus:bg-white pr-12">
                                    <button type="button" class="absolute inset-y-0 right-0 pr-4 flex items-center toggle-password-btn" data-target="contraseña-actual">
                                        <i class="fas fa-eye text-gray-400"></i>
                                    </button>
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-lock mr-2 text-amber-500"></i>Nueva Contraseña *
                                </label>
                                <div class="relative">
                                    <input type="password" id="nueva-contraseña" name="nuevaContraseña" class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:border-amber-500 focus:ring-4 focus:ring-amber-200/50 transition-all duration-300 bg-gray-50 focus:bg-white pr-12">
                                    <button type="button" class="absolute inset-y-0 right-0 pr-4 flex items-center toggle-password-btn" data-target="nueva-contraseña">
                                        <i class="fas fa-eye text-gray-400"></i>
                                    </button>
                                </div>
                                <div class="mt-3">
                                    <div class="text-sm text-gray-600">
                                        <p class="font-semibold mb-2">La contraseña debe tener al menos:</p>
                                        <ul class="space-y-1">
                                            <li id="length-check" class="flex items-center text-red-500">
                                                <i class="fas fa-times mr-2"></i>
                                                8 caracteres
                                            </li>
                                            <li id="uppercase-check" class="flex items-center text-red-500">
                                                <i class="fas fa-times mr-2"></i>
                                                1 letra mayúscula
                                            </li>
                                            <li id="lowercase-check" class="flex items-center text-red-500">
                                                <i class="fas fa-times mr-2"></i>
                                                1 letra minúscula
                                            </li>
                                            <li id="number-check" class="flex items-center text-red-500">
                                                <i class="fas fa-times mr-2"></i>
                                                1 número
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-lock mr-2 text-amber-500"></i>Confirmar Nueva Contraseña *
                                </label>
                                <div class="relative">
                                    <input type="password" id="confirmar-contraseña" name="confirmarContraseña" class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:border-amber-500 focus:ring-4 focus:ring-amber-200/50 transition-all duration-300 bg-gray-50 focus:bg-white pr-12">
                                    <button type="button" class="absolute inset-y-0 right-0 pr-4 flex items-center toggle-password-btn" data-target="confirmar-contraseña">
                                        <i class="fas fa-eye text-gray-400"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
                                <button type="button" id="cancelar-contraseña" class="px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-2xl transition-colors duration-200 flex items-center space-x-2">
                                    <i class="fas fa-times"></i>
                                    <span>Cancelar</span>
                                </button>
                                <button type="submit" id="guardar-contraseña" class="px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-600 text-white font-semibold rounded-2xl shadow-lg hover:shadow-xl hover:from-amber-600 hover:to-orange-700 transition-all duration-300 transform hover:-translate-y-1 flex items-center space-x-2">
                                    <i class="fas fa-save"></i>
                                    <span>Cambiar Contraseña</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- AOS Animation Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- JavaScript personalizado para perfil -->
    <script src="/js/perfil.js"></script>
    
    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });

        // Password toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButtons = document.querySelectorAll('.toggle-password-btn');
            toggleButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-target');
                    const input = document.getElementById(targetId);
                    const icon = this.querySelector('i');
                    
                    if (input.type === 'password') {
                        input.type = 'text';
                        icon.classList.remove('fa-eye');
                        icon.classList.add('fa-eye-slash');
                    } else {
                        input.type = 'password';
                        icon.classList.remove('fa-eye-slash');
                        icon.classList.add('fa-eye');
                    }
                });
            });
        });
    </script>
</body>
</html>