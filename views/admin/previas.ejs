                    nombre: materiaNombre,
                    codigo: materiaCodigo,
                    semestre: materiaSemestre,
                    semestreOriginal: previa.materia.semestre
                });
                
                if (!grupos[materiaId]) {
                    grupos[materiaId] = {
                        materia: {
