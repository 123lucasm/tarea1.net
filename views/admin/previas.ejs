                const materiaNombre = previa.materia.nombre || 'N/A';
                const materiaCodigo = previa.materia.codigo || 'N/A';
                const materiaSemestre = previa.materia.semestre?.nombre || 'N/A';
                
                console.log('‚úÖ Datos extra√≠dos:', {
