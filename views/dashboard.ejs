<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Tailwind CSS Local -->
    <link rel="stylesheet" href="/css/tailwind.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS for Dashboard Page -->
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-graduation-cap me-2"></i>
                <strong>MATRICULATEC</strong>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-togg-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!--
                    <li class="nav-item">
                        <a class="nav-link" href="/materias">
                            <i class="fas fa-book me-1"></i>
                            Materias
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/elegibilidad">
                            <i class="fas fa-check-circle me-1"></i>
                            Elegibilidad
                        </a>
                    </li>
                    -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user me-1"></i>
                            <%= usuario.nombre %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/dashboard">Mi Dashboard</a></li>
                            <li><a class="dropdown-item" href="/auth/perfil">Mi Perfil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/auth/logout">Cerrar Sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <!-- Welcome Section -->
            <div class="welcome-section text-center">
                <h1 class="welcome-title">¡Bienvenido, <%= usuario.nombre %>!</h1>
                <p class="welcome-subtitle">Tu centro de control académico personal</p>
            </div>

            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number">5</div>
                    <div class="stat-label">Materias Activas</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">18</div>
                    <div class="stat-label">Créditos Aprobados</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">3.8</div>
                    <div class="stat-label">Promedio General</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">2</div>
                    <div class="stat-label">Semestres Completados</div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="quick-actions">
                <a href="/materias-cursadas" class="action-btn">
                    <i class="fas fa-graduation-cap"></i>
                    Mis Materias Cursadas
                </a>
                <!--
                <a href="/materias" class="action-btn">
                    <i class="fas fa-search"></i>
                    Buscar Materias
                </a>
                <a href="/elegibilidad" class="action-btn">
                    <i class="fas fa-check-circle"></i>
                    Ver Elegibilidad
                </a>
                <a href="/previas" class="action-btn">
                    <i class="fas fa-list"></i>
                    Gestionar Previas
                </a>
                <a href="/auth/perfil" class="action-btn">
                    <i class="fas fa-user-edit"></i>
                    Editar Perfil
                </a>
                -->
            </div>

            <div class="row">
                <!-- User Profile -->
                <div class="col-lg-4">
                    <div class="user-profile">
                        <div class="profile-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <h4><%= usuario.nombre %> <%= usuario.apellido %></h4>
                        <p class="text-muted mb-3"><%= usuario.email %></p>
                        <span class="badge bg-primary fs-6"><%= usuario.rol.charAt(0).toUpperCase() + usuario.rol.slice(1) %></span>
                        
                        <div class="mt-4">
                            <h6>Información Académica</h6>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Estado:</span>
                                <span class="badge bg-success">Activo</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Último Acceso:</span>
                                <span>Hoy</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="col-lg-8">
                    <div class="recent-activity">
                        <h4 class="mb-4">
                            <i class="fas fa-history me-2"></i>
                            Actividad Reciente
                        </h4>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-check"></i>
                            </div>
                            <div>
                                <strong>Materia Aprobada</strong>
                                <p class="mb-0 text-muted">Programación I - Calificación: 4.2</p>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-book"></i>
                            </div>
                            <div>
                                <strong>Nueva Materia Registrada</strong>
                                <p class="mb-0 text-muted">Base de Datos - Semestre 3</p>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div>
                                <strong>Horario Actualizado</strong>
                                <p class="mb-0 text-muted">Matemáticas II - Lunes y Miércoles 10:00</p>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-user-edit"></i>
                            </div>
                            <div>
                                <strong>Perfil Actualizado</strong>
                                <p class="mb-0 text-muted">Información de contacto modificada</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript for Dashboard Page -->
    <script src="/js/dashboard.js"></script>

    <!-- Sistema de Notificaciones -->
    <div id="notification" class="notification">
        <div class="notification-content">
            <div class="notification-icon">
                <i class="fas fa-check"></i>
            </div>
            <span id="notification-message">¡Inicio de sesión exitoso!</span>
            <button class="notification-close" onclick="hideNotification()">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
</body>
</html>
