<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - MATRICULATEC</title>
    
    <!-- Tailwind CSS Local -->
    <link rel="stylesheet" href="/css/tailwind.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AOS Animations -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Alertas CSS -->
    <link href="/css/alerts.css" rel="stylesheet">
</head>

<body class="bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 min-h-screen font-inter">
    <!-- Main Content -->
    <div class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <!-- Header Section -->
            <div class="text-center" data-aos="fade-down">
                <div class="mx-auto w-20 h-20 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-3xl flex items-center justify-center shadow-2xl shadow-blue-500/25 mb-6">
                    <i class="fas fa-envelope text-white text-3xl"></i>
                </div>
                <h2 class="text-4xl font-bold text-gray-900 mb-4">
                    Verificar Email
                </h2>
                <p class="text-xl text-gray-600 leading-relaxed">
                    Ingresa el código de 6 dígitos que enviamos a tu correo electrónico
                </p>
            </div>

            <!-- Alertas -->
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="relative overflow-hidden rounded-2xl shadow-lg border border-red-200/50 backdrop-blur-sm animate-slideInDown" data-aos="fade-up">
                    <div class="absolute inset-0 bg-gradient-to-r from-red-500 to-rose-600 opacity-90"></div>
                    <div class="relative bg-white/10 backdrop-blur-sm p-6">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center shadow-lg">
                                <i class="fas fa-exclamation-circle text-white text-xl"></i>
                            </div>
                            <p class="text-white font-semibold text-lg flex-1">
                                <%= error %>
                            </p>
                        </div>
                    </div>
                </div>
            <% } %>
            
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="relative overflow-hidden rounded-2xl shadow-lg border border-blue-200/50 backdrop-blur-sm animate-slideInDown" data-aos="fade-up">
                    <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-indigo-600 opacity-90"></div>
                    <div class="relative bg-white/10 backdrop-blur-sm p-6">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center shadow-lg">
                                <i class="fas fa-info-circle text-white text-xl"></i>
                            </div>
                            <p class="text-white font-semibold text-lg flex-1">
                                <%= message %>
                            </p>
                        </div>
                    </div>
                </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="relative overflow-hidden rounded-2xl shadow-lg border border-green-200/50 backdrop-blur-sm animate-slideInDown" data-aos="fade-up">
                    <div class="absolute inset-0 bg-gradient-to-r from-green-500 to-emerald-600 opacity-90"></div>
                    <div class="relative bg-white/10 backdrop-blur-sm p-6">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center shadow-lg">
                                <i class="fas fa-check-circle text-white text-xl"></i>
                            </div>
                            <p class="text-white font-semibold text-lg flex-1">
                                <%= success %>
                            </p>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Verification Card -->
            <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-2xl border border-gray-200/50 p-8" data-aos="fade-up" data-aos-delay="200">
                <!-- Formulario -->
                <form action="/auth/verificar-email" method="POST" id="verificacionForm" class="space-y-6">
                    <input type="hidden" name="email" value="<%= email %>">
                    
                    <!-- Código Input -->
                    <div class="space-y-2">
                        <label for="codigo" class="block text-sm font-bold text-gray-800 flex items-center">
                            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-lg flex items-center justify-center mr-3">
                                <i class="fas fa-key text-white text-sm"></i>
                            </div>
                            Código de verificación
                        </label>
                        <div class="relative">
                            <input 
                                type="text" 
                                id="codigo"
                                name="codigo"
                                class="w-full px-6 py-4 text-center text-2xl font-bold tracking-widest border-2 border-gray-200 rounded-2xl focus:border-blue-500 focus:ring-4 focus:ring-blue-200/50 transition-all duration-300 bg-white/50 backdrop-blur-sm"
                                placeholder="000000"
                                maxlength="6"
                                required
                                autocomplete="off"
                                autofocus
                            >
                            <div class="absolute inset-y-0 right-0 pr-4 flex items-center">
                                <i class="fas fa-shield-alt text-blue-500"></i>
                            </div>
                        </div>
                        <div class="flex items-center justify-center text-sm text-gray-500">
                            <i class="fas fa-clock mr-2"></i>
                            <span>El código expira en 15 minutos</span>
                        </div>
                    </div>

                    <!-- Botón principal -->
                    <button 
                        type="submit" 
                        class="w-full bg-gradient-to-r from-blue-600 to-indigo-700 text-white py-4 px-6 rounded-2xl font-bold text-lg shadow-xl hover:shadow-2xl hover:shadow-blue-500/25 transition-all duration-300 transform hover:-translate-y-1 hover:scale-105 relative overflow-hidden group"
                        id="verifyBtn"
                    >
                        <div class="absolute inset-0 bg-gradient-to-r from-blue-700 to-indigo-800 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <div class="relative flex items-center justify-center">
                            <span class="spinner-border spinner-border-sm mr-3 d-none" id="verifySpinner"></span>
                            <i class="fas fa-check mr-3 d-none" id="verifyIcon"></i>
                            <span id="verifyText">Verificar Email</span>
                        </div>
                    </button>
                </form>

                <!-- Reenviar código -->
                <form action="/auth/reenviar-codigo" method="POST" class="mt-6">
                    <input type="hidden" name="email" value="<%= email %>">
                    <button 
                        type="submit" 
                        class="w-full bg-white border-2 border-gray-200 text-gray-700 py-3 px-6 rounded-2xl font-semibold hover:border-blue-300 hover:text-blue-600 hover:bg-blue-50 transition-all duration-300 transform hover:-translate-y-0.5"
                        id="resendBtn"
                    >
                        <i class="fas fa-paper-plane mr-2"></i>
                        Reenviar código
                    </button>
                </form>

                <!-- Links auxiliares -->
                <div class="text-center mt-8 space-y-4">
                    <div class="bg-gray-50 rounded-2xl p-4">
                        <div class="flex items-center justify-center text-gray-600 mb-2">
                            <i class="fas fa-question-circle mr-2"></i>
                            <span class="font-medium">¿No recibiste el código?</span>
                        </div>
                        <p class="text-sm text-gray-500">
                            Revisa tu carpeta de spam o 
                            <a href="/auth/registro" class="text-blue-600 hover:text-blue-700 font-bold transition-colors duration-200">
                                regístrate nuevamente
                            </a>
                        </p>
                    </div>
                    
                    <div class="flex items-center justify-center space-x-4 text-sm text-gray-500">
                        <a href="/auth/login" class="hover:text-blue-600 transition-colors duration-200">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Volver al login
                        </a>
                        <span>•</span>
                        <a href="/" class="hover:text-blue-600 transition-colors duration-200">
                            <i class="fas fa-home mr-1"></i>
                            Ir al inicio
                        </a>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="text-center text-gray-500 text-sm" data-aos="fade-up" data-aos-delay="400">
                <p>
                    &copy; 2025 <strong class="text-gray-700">UTEC</strong> - Universidad Tecnológica del Uruguay. Todos los derechos reservados.
                </p>
            </div>
        </div>
    </div>

    <!-- AOS Animation Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- Custom JavaScript -->
    <script>
        // Inicializar AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });

        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('verificacionForm');
            const codigoInput = document.getElementById('codigo');
            const verifyBtn = document.getElementById('verifyBtn');
            const verifySpinner = document.getElementById('verifySpinner');
            const verifyIcon = document.getElementById('verifyIcon');
            const verifyText = document.getElementById('verifyText');
            const resendBtn = document.getElementById('resendBtn');

            // Formatear código solo con números
            codigoInput.addEventListener('input', function(e) {
                const value = e.target.value.replace(/\D/g, ''); // Solo números
                e.target.value = value;
                
                // Auto-submit cuando se complete el código de 6 dígitos
                if (value.length === 6) {
                    setTimeout(() => {
                        form.submit();
                    }, 500);
                }
            });

            // Manejar envío del formulario
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const codigo = codigoInput.value.trim();
                
                if (!codigo || codigo.length !== 6) {
                    // Agregar animación de error
                    codigoInput.classList.add('border-red-500', 'animate-pulse');
                    setTimeout(() => {
                        codigoInput.classList.remove('border-red-500', 'animate-pulse');
                    }, 1000);
                    
                    Swal.fire({
                        icon: 'warning',
                        title: 'Código inválido',
                        text: 'Por favor ingresa los 6 dígitos del código',
                        confirmButtonColor: '#3b82f6',
                        background: '#ffffff',
                        customClass: {
                            confirmButton: 'btn btn-primary px-4 py-2 rounded-lg'
                        }
                    });
                    return;
                }

                // Mostrar spinner
                verifySpinner.classList.remove('d-none');
                verifyIcon.classList.add('d-none');
                verifyText.textContent = 'Verificando...';
                verifyBtn.disabled = true;
                resendBtn.disabled = true;

                // Enviar formulario
                setTimeout(() => {
                    form.submit();
                }, 1000);
            });

            // Manejar reenvío de código
            resendBtn.addEventListener('click', function(e) {
                e.preventDefault();
                
                Swal.fire({
                    icon: 'question',
                    title: 'Reenviar código',
                    text: '¿Deseas reenviar el código de verificación?',
                    showCancelButton: true,
                    confirmButtonText: 'Sí, reenviar',
                    cancelButtonText: 'Cancelar',
                    confirmButtonColor: '#3b82f6',
                    cancelButtonColor: '#6b7280',
                    background: '#ffffff'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resendBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Reenviando...';
                        resendBtn.disabled = true;
                        
                        // Simular envío
                        setTimeout(() => {
                            resendBtn.closest('form').submit();
                        }, 1000);
                    }
                });
            });

            // Auto-enfocar en el campo de código
            codigoInput.focus();
        });
    </script>
</body>
</html>