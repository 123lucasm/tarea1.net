<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - MATRICULATEC</title>
    
    <!-- Tailwind CSS Local -->
    <link rel="stylesheet" href="/css/tailwind.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/auth-styles.css">
</head>

<body class="bg-gradient-to-br from-blue-50 to-indigo-100 font-inter">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-graduation-cap me-2"></i>
                <strong>MATRICULATEC</strong>
            </a>
        </div>
    </nav>

    <!-- Main Content Container -->
    <div class="min-h-screen d-flex align-items-center justify-content-center" style="padding-top: 80px;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <!-- Verificación Card -->
                    <div class="bg-white rounded-3xl shadow-2xl p-6 border border-blue-100">
                        <!-- Header -->
                        <div class="text-center mb-6">
                            <div class="w-16 h-16 bg-blue-100 rounded-full d-flex align-items-center justify-content-center mx-auto mb-4">
                                <i class="fas fa-envelope text-blue-600 text-2xl"></i>
                            </div>
                            <h2 class="fw-bold text-gray-900 mb-2">Verificar Email</h2>
                            <p class="text-gray-600">Ingresa el código que enviamos a tu correo electrónico</p>
                        </div>

                        <!-- Alertas -->
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger border-0 rounded-lg mb-4" style="background-color: #fef2f2; border-color: #fca5a5;">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <%= error %>
                            </div>
                        <% } %>
                        
                        <% if (typeof message !== 'undefined' && message) { %>
                            <div class="alert alert-info border-0 rounded-lg mb-4" style="background-color: #eff6ff; border-color: #93c5fd;">
                                <i class="fas fa-info-circle me-2"></i>
                                <%= message %>
                            </div>
                        <% } %>

                        <% if (typeof success !== 'undefined' && success) { %>
                            <div class="alert alert-success border-0 rounded-lg mb-4" style="background-color: #f0fdf4; border-color: #86efac;">
                                <i class="fas fa-check-circle me-2"></i>
                                <%= success %>
                            </div>
                        <% } %>

                        <!-- Formulario -->
                        <form action="/auth/verificar-email" method="POST" id="verificacionForm">
                            <input type="hidden" name="email" value="<%= email %>">
                            
                            <div class="mb-4">
                                <label for="codigo" class="form-label fw-semibold text-gray-700 mb-2">
                                    <i class="fas fa-key me-2 text-blue-500"></i>
                                    Código de verificación
                                </label>
                                <input 
                                    type="text" 
                                    class="form-control form-control-lg border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:ring-0" 
                                    id="codigo"
                                    name="codigo"
                                    placeholder="123456"
                                    maxlength="6"
                                    required
                                    autocomplete="off"
                                    autofocus
                                >
                                <div class="form-text text-gray-500 mt-2">
                                    <i class="fas fa-clock me-1"></i>
                                    El código expira en 15 minutos
                                </div>
                            </div>

                            <!-- Botón principal -->
                            <button 
                                type="submit" 
                                class="btn btn-primary w-100 py-3 rounded-xl fw-bold mb-4 position-relative"
                                style="background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); border: none; box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);"
                                id="verifyBtn"
                            >
                                <span class="spinner-border spinner-border-sm me-2 d-none" id="verifySpinner"></span>
                                <i class="fas fa-check me-2 d-none" id="verifyIcon"></i>
                                <span id="verifyText">Verificar Email</span>
                            </button>
                        </form>

                        <!-- Reenviar código -->
                        <form action="/auth/reenviar-codigo" method="POST" class="d-inline w-100">
                            <input type="hidden" name="email" value="<%= email %>">
                            <button 
                                type="submit" 
                                class="btn btn-outline-secondary w-100 py-2 rounded-xl border-2 hover:bg-gray-50"
                                id="resendBtn"
                            >
                                <i class="fas fa-paper-plane me-2"></i>
                                Reenviar código
                            </button>
                        </form>

                        <!-- Links auxiliares -->
                        <div class="text-center mt-4">
                            <p class="text-gray-600 mb-2">
                                <i class="fas fa-question-circle me-1"></i>
                                ¿No recibiste el código?
                            </p>
                            <p class="text-gray-500 small">
                                Revisa tu carpeta de spam o 
                                <a href="/auth/registro" class="text-blue-600 text-decoration-none fw-bold">regístrate nuevamente</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('verificacionForm');
            const codigoInput = document.getElementById('codigo');
            const verifyBtn = document.getElementById('verifyBtn');
            const verifySpinner = document.getElementById('verifySpinner');
            const verifyIcon = document.getElementById('verifyIcon');
            const verifyText = document.getElementById('verifyText');
            const resendBtn = document.getElementById('resendBtn');

            // Formatear código solo con números
            codigoInput.addEventListener('input', function(e) {
                const value = e.target.value.replace(/\D/g, ''); // Solo números
                e.target.value = value;
                
                // Auto-submit cuando se complete el código de 6 dígitos
                if (value.length === 6) {
                    setTimeout(() => {
                        form.submit();
                    }, 500);
                }
            });

            // Manejar envío del formulario
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const codigo = codigoInput.value.trim();
                
                if (!codigo || codigo.length !== 6) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Código inválido',
                        text: 'Por favor ingresa los 6 dígitos del código',
                        confirmButtonColor: '#3b82f6',
                        background: '#ffffff',
                        customClass: {
                            confirmButton: 'btn btn-primary px-4 py-2 rounded-lg'
                        }
                    });
                    return;
                }

                // Mostrar spinner
                verifySpinner.classList.remove('d-none');
                verifyIcon.classList.add('d-none');
                verifyText.textContent = 'Verificando...';
                verifyBtn.disabled = true;
                resendBtn.disabled = true;

                // Enviar formulario
                setTimeout(() => {
                    form.submit();
                }, 1000);
            });

            // Manejar reenvío de código
            resendBtn.addEventListener('click', function(e) {
                e.preventDefault();
                
                Swal.fire({
                    icon: 'question',
                    title: 'Reenviar código',
                    text: '¿Deseas reenviar el código de verificación?',
                    showCancelButton: true,
                    confirmButtonText: 'Sí, reenviar',
                    cancelButtonText: 'Cancelar',
                    confirmButtonColor: '#3b82f6',
                    cancelButtonColor: '#6b7280',
                    background: '#ffffff'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resendBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Reenviando...';
                        resendBtn.disabled = true;
                        
                        // Simular envío
                        setTimeout(() => {
                            resendBtn.closest('form').submit();
                        }, 1000);
                    }
                });
            });

            // Auto-enfocar en el campo de código
            codigoInput.focus();
        });
    </script>

    <style>
        /* Estilos adicionales para la página de verificación */
        .navbar {
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        }
        
        .navbar-brand {
            color: white !important;
            font-weight: 700;
            font-size: 1.25rem;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
            border-color: #3b82f6;
        }

        .btn:disabled {
            opacity: 0.6;
        }

        /* Animación para códigos incorrectos */
        .border-danger {
            animation: shake 0.5s ease-in-out;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }
    </style>
</body>
</html>

