<!-- Sistema de Alertas -->
<% if (typeof alerts !== 'undefined' && alerts.length > 0) { %>
  <div class="max-w-4xl mx-auto px-4 py-4 space-y-4">
    <% alerts.forEach(alert => { %>
      <div class="relative overflow-hidden rounded-2xl shadow-lg border border-gray-200/50 backdrop-blur-sm animate-slideInDown" role="alert">
        <!-- Fondo con gradiente según tipo -->
        <div class="absolute inset-0 <%= alert.type === 'success' ? 'bg-gradient-to-r from-green-500 to-emerald-600' : alert.type === 'danger' ? 'bg-gradient-to-r from-red-500 to-rose-600' : alert.type === 'warning' ? 'bg-gradient-to-r from-amber-500 to-orange-600' : 'bg-gradient-to-r from-blue-500 to-indigo-600' %> opacity-90"></div>
        
        <!-- Contenido -->
        <div class="relative bg-white/10 backdrop-blur-sm p-6">
          <div class="flex items-start space-x-4">
            <!-- Icono -->
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center shadow-lg">
                <i class="fas fa-<%= alert.type === 'success' ? 'check-circle' : alert.type === 'danger' ? 'exclamation-triangle' : alert.type === 'warning' ? 'exclamation-triangle' : 'info-circle' %> text-white text-xl"></i>
              </div>
            </div>
            
            <!-- Mensaje -->
            <div class="flex-1">
              <p class="text-white font-semibold text-lg leading-relaxed">
                <%= alert.message %>
              </p>
            </div>
            
            <!-- Botón cerrar -->
            <button type="button" class="flex-shrink-0 text-white/80 hover:text-white hover:bg-white/20 rounded-lg p-2 transition-all duration-200" onclick="this.parentElement.parentElement.parentElement.remove()">
              <i class="fas fa-times text-xl"></i>
            </button>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
<% } %>

