    <% messages.forEach(message => { %>
      <div class="alert alert-<%= message.type || 'info' %> alert-dismissible fade show" role="alert">
        <i class="fas fa-<%= message.type === 'success' ? 'check-circle' : message.type === 'danger' ? 'exclamation-triangle' : message.type === 'warning' ? 'exclamation-triangle' : 'info-circle' %> me-2"></i>
        <%= message.text %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }); %>
  </div>
<% } %>

