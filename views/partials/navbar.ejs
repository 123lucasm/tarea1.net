                            <a class="nav-link" href="/elegibilidad/materias">
                                <i class="fas fa-list-check me-1"></i>Materias Elegibles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/estudiantes/historial">
                                <i class="fas fa-history me-1"></i>Mi Historial
                            </a>
                        </li>
                    <% } %>
                    
                    <% if (usuario.rol === 'administrador') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/dashboard">
                                <i class="fas fa-cogs me-1"></i>Panel Admin
